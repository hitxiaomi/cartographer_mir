<launch>
  <arg name="bag_filename"/>
  <arg name="no_rviz" default="false"/>
  <arg name="keep_running" default="false"/>
  <param name="/use_sim_time" value="true" />

  <group unless="$(arg no_rviz)">
    <node name="rviz" pkg="rviz" type="rviz" required="true" args="-d $(find cartographer_ros)/configuration_files/demo_2d.rviz" />
  </group>
  <node name="playbag" pkg="rosbag" type="play" args="--clock $(arg bag_filename)" />

  <param name="robot_description" textfile="$(find cartographer_mir)/urdf/mir-100.urdf" />
  <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" />
  <node name="cartographer_node" pkg="cartographer_ros" required="true" type="cartographer_node" args="
          -configuration_directory $(find cartographer_mir)/configuration_files
          -configuration_basename mir-100-mapping.lua" output="screen">
    <remap from="scan_1" to="f_scan" />
    <remap from="scan_2" to="b_scan" />
    <remap from="imu" to="imu_data" />
    <remap from="ignore_odom" to="odom" />
    <remap from="odom" to="odom_enc" />
  </node>
  <node name="cartographer_occupancy_grid_node" pkg="cartographer_ros" type="cartographer_occupancy_grid_node" args="-resolution 0.05" />
</launch>

